<div id="items">
  <table class="table table-striped">
    <thead>
      <tr>
        <td>
          Name
        </td>
        <td>
          Location
        </td>
        <td>
          Quantity
        </td>
        <td>
          Date
        </td>
        <td>
          Show
        </td>
        <td>
          Edit
        </td>
        <td>
          Delete
        </td>
      </tr>
    </thead>
    <% items.each do |item| %>
      <tbody>
        <tr>
          <td>
            <%= item.name %>
          </td>
          <td>
            <%= item.location_id.present? ? Location.find(item.location_id).city : "Not assigned to a Location" %>
          <td>
            <%= item.quantity %>
          </td>
          <td>
            <%= item.date %>
          </td>
          <td>
            <%= link_to "Show", item, class:"btn btn-light"%>
          </td>
          <td>
            <%= link_to "Edit", edit_item_path(item), class:"btn btn-light"%>
          </td>
          <td>
            <%= button_to "Delete", item, method: :delete, class:"btn btn-danger"%>
          </td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>

